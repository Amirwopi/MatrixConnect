<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="393dp"
    android:layout_height="852dp"
    android:background="#292929">

    <!-- Status Bar -->
    <LinearLayout
        android:id="@+id/status_bar"
        android:layout_width="393dp"
        android:layout_height="54dp"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="9:41"
            android:textColor="#FFFFFF"
            android:textSize="17sp"
            android:layout_marginStart="37dp"
            android:layout_marginTop="18dp"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginTop="23dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="13dp"
                android:src="@drawable/ic_cellular"/>

            <ImageView
                android:layout_width="18dp"
                android:layout_height="13dp"
                android:layout_marginStart="5dp"
                android:src="@drawable/ic_wifi"/>

            <LinearLayout
                android:layout_width="27dp"
                android:layout_height="13dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/battery_background"
                android:padding="2dp">

                <View
                    android:layout_width="21dp"
                    android:layout_height="9dp"
                    android:background="#FFFFFF"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="345dp"
        android:layout_height="50dp"
        android:layout_below="@id/status_bar"
        android:layout_marginTop="13dp"
        android:layout_marginHorizontal="26dp"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_menu"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:background="@drawable/button_menu_background"
            android:drawableCenter="@drawable/ic_menu"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <ImageView
            android:layout_width="150dp"
            android:layout_height="41dp"
            android:src="@drawable/ic_logo"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_notification"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:background="@drawable/button_notification_background"
            android:drawableCenter="@drawable/ic_notification"/>

    </LinearLayout>

    <!-- World Map -->
    <ImageView
        android:id="@+id/world_map"
        android:layout_width="393dp"
        android:layout_height="532dp"
        android:layout_below="@id/header"
        android:layout_marginTop="10dp"
        android:src="@drawable/world_map_dark"/>

    <!-- Location Card -->
    <LinearLayout
        android:id="@+id/card_location"
        android:layout_width="345dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="153dp"
        android:background="@drawable/card_location_background"
        android:padding="12dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:rotation="180"
            android:src="@drawable/ic_signal"/>

        <LinearLayout
            android:layout_width="229dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="153dp"
                android:layout_height="20dp"
                android:text="بهترین منطقه"
                android:textColor="#14AE5C"
                android:textSize="13sp"
                android:textStyle="bold"
                android:gravity="end"/>

            <TextView
                android:layout_width="217dp"
                android:layout_height="18dp"
                android:text="سریعترین سرور"
                android:textColor="#DBD6CE"
                android:textSize="12sp"
                android:gravity="center"/>

        </LinearLayout>

        <FrameLayout
            android:layout_width="41dp"
            android:layout_height="match_parent"
            android:background="#D9D9D9"
            android:layout_marginStart="16dp">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_global"/>

        </FrameLayout>

    </LinearLayout>

    <!-- Change Location Button -->
    <LinearLayout
        android:id="@+id/btn_change_location"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginTop="249dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_change_location_background"
        android:paddingHorizontal="16dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_up"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="تغییر منطقه"
            android:textColor="#78DBA6"
            android:textSize="16sp"
            android:textStyle="bold"/>

    </LinearLayout>

    <!-- Connect Button -->
    <FrameLayout
        android:id="@+id/btn_connect"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="478dp"
        android:layout_marginStart="72dp">

        <View
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:background="@drawable/circle_wave_outer"
            android:alpha="0.2"/>

        <View
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:background="@drawable/circle_wave_inner"
            android:alpha="0.2"/>

        <FrameLayout
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:background="@drawable/circle_button">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="66dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_power"/>

        </FrameLayout>

    </FrameLayout>

    <!-- Bottom Text -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="759dp"
        android:layout_marginStart="12dp"
        android:text="برای وصل شدن لمس کنید"
        android:textColor="#FFFFFF"
        android:textSize="32sp"
        android:textStyle="bold"
        android:gravity="center"/>

    <!-- Bottom Background -->
    <View
        android:layout_width="726dp"
        android:layout_height="410dp"
        android:layout_marginStart="-166dp"
        android:layout_marginTop="603dp"
        android:background="@drawable/bottom_background"/>

</RelativeLayout>
